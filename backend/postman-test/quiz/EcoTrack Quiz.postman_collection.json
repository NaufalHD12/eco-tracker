				{
					"name": "Submit Quiz Answers",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Ensure question ID variables are set for testing",
									"// If not set from previous test, use fallback values",
									"if (!pm.collectionVariables.get('question_1_id')) {",
									"    // Make a quick call to get the quiz and extract question IDs",
									"    const quizResponse = pm.sendRequest({",
									"        url: pm.collectionVariables.get('base_url') + '/quizzes/' + pm.collectionVariables.get('quiz_id'),",
									"        method: 'GET',",
									"        header: {",
									"            'Authorization': 'Bearer ' + pm.collectionVariables.get('token')",
									"        }",
									"    });",
									"    ",
									"    quizResponse.done(function(response) {",
									"        if (response.code === 200) {",
									"            const questions = response.json().quiz.questions;",
									"            if (questions && questions.length >= 3) {",
									"                pm.collectionVariables.set('question_1_id', questions[0]._id);",
									"                pm.collectionVariables.set('question_2_id', questions[1]._id);",
									"                pm.collectionVariables.set('question_3_id', questions[2]._id);",
									"            }",
									"        }",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has result data\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('result');",
									"    var result = jsonData.result;",
									"    pm.expect(result).to.have.property('score');",
									"    pm.expect(result).to.have.property('totalPoints');",
									"    pm.expect(result).to.have.property('percentage');",
									"    pm.expect(result).to.have.property('correctAnswers');",
									"    pm.expect(result).to.have.property('totalQuestions');",
									"    pm.expect(result).to.have.property('grade');",
									"    pm.expect(result).to.have.property('isPassed');",
									"});",
									"",
									"pm.test(\"Score calculation is correct\", function () {",
									"    var result = pm.response.json().result;",
									"    pm.expect(result.score).to.be.a('number');",
									"    pm.expect(result.percentage).to.be.a('number');",
									"    pm.expect(result.percentage).to.be.at.least(0);",
									"    pm.expect(result.percentage).to.be.at.most(100);",
									"});",
									"",
									"pm.test(\"Question IDs were properly set\", function () {",
									"    pm.expect(pm.collectionVariables.get('question_1_id')).to.not.be.empty;",
									"    pm.expect(pm.collectionVariables.get('question_2_id')).to.not.be.empty;",
									"    pm.expect(pm.collectionVariables.get('question_3_id')).to.not.be.empty;",
									"});"
