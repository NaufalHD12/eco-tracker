	"item": [
		{
			"name": "Dashboard",
			"item": [
				{
					"name": "Get Dashboard - Weekly (Default)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has success message\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('message');",
									"    pm.expect(jsonData.message).to.eql('Dashboard data retrieved successfully');",
									"});",
									"",
									"pm.test(\"Response has dashboard data\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('dashboard');",
									"    pm.expect(jsonData.dashboard).to.be.an('object');",
									"});",
									"",
									"pm.test(\"Dashboard has summary data\", function () {",
									"    var dashboard = pm.response.json().dashboard;",
									"    pm.expect(dashboard).to.have.property('summary');",
									"    pm.expect(dashboard.summary).to.have.property('totalEmission');",
									"    pm.expect(dashboard.summary).to.have.property('targetEmission');",
									"    pm.expect(dashboard.summary).to.have.property('dailyAverage');",
									"    pm.expect(dashboard.summary).to.have.property('totalTrees');",
									"});",
									"",
									"pm.test(\"Summary values are valid numbers\", function () {",
									"    var summary = pm.response.json().dashboard.summary;",
									"    pm.expect(summary.totalEmission).to.be.a('number');",
									"    pm.expect(summary.targetEmission).to.be.a('number');",
									"    pm.expect(summary.dailyAverage).to.be.a('number');",
									"    pm.expect(summary.totalTrees).to.be.a('number');",
									"    pm.expect(summary.totalEmission).to.be.at.least(0);",
									"    pm.expect(summary.dailyAverage).to.be.at.least(0);",
									"});",
									"",
									"pm.test(\"Dashboard has chart data\", function () {",
									"    var dashboard = pm.response.json().dashboard;",
									"    pm.expect(dashboard).to.have.property('chartData');",
									"    pm.expect(dashboard.chartData).to.have.property('labels');",
									"    pm.expect(dashboard.chartData).to.have.property('data');",
									"    pm.expect(dashboard.chartData.labels).to.be.an('array');",
									"    pm.expect(dashboard.chartData.data).to.be.an('array');",
									"});",
									"",
									"pm.test(\"Weekly chart has 7 days of data\", function () {",
									"    var chartData = pm.response.json().dashboard.chartData;",
									"    pm.expect(chartData.labels).to.have.lengthOf(7);",
									"    pm.expect(chartData.data).to.have.lengthOf(7);",
									"    // Check that labels are valid date strings",
									"    chartData.labels.forEach(function(label) {",
									"        pm.expect(label).to.match(/^\\d{4}-\\d{2}-\\d{2}$/);",
									"    });",
									"});",
									"",
									"pm.test(\"Chart data values are valid numbers\", function () {",
									"    var chartData = pm.response.json().dashboard.chartData;",
									"    chartData.data.forEach(function(value) {",
									"        pm.expect(value).to.be.a('number');",
									"        pm.expect(value).to.be.at.least(0);",
									"    });",
									"});",
									"",
									"pm.test(\"Dashboard has category breakdown\", function () {",
									"    var dashboard = pm.response.json().dashboard;",
									"    pm.expect(dashboard).to.have.property('categoryBreakdown');",
									"    pm.expect(dashboard.categoryBreakdown).to.be.an('array');",
									"});",
									"",
									"pm.test(\"Category breakdown has valid structure\", function () {",
									"    var categories = pm.response.json().dashboard.categoryBreakdown;",
									"    categories.forEach(function(category) {",
									"        pm.expect(category).to.have.property('category');",
									"        pm.expect(category).to.have.property('total');",
									"        pm.expect(category).to.have.property('count');",
									"        pm.expect(category).to.have.property('percentage');",
									"        pm.expect(category.total).to.be.a('number');",
									"        pm.expect(category.count).to.be.a('number');",
									"        pm.expect(category.percentage).to.be.a('number');",
									"        pm.expect(category.total).to.be.at.least(0);",
									"        pm.expect(category.count).to.be.at.least(0);",
									"        pm.expect(category.percentage).to.be.at.least(0);",
									"        pm.expect(category.percentage).to.be.at.most(100);",
									"    });",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": "{{base_url}}/dashboard"
					},
					"response": []
				},
				{
					"name": "Get Dashboard - Monthly",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Monthly chart data is valid\", function () {",
									"    var chartData = pm.response.json().dashboard.chartData;",
									"    // Monthly should have variable days (28-31)",
									"    pm.expect(chartData.labels.length).to.be.within(28, 31);",
									"    pm.expect(chartData.data.length).to.equal(chartData.labels.length);",
									"});",
									"",
									"pm.test(\"Monthly period summary is correct\", function () {",
									"    var summary = pm.response.json().dashboard.summary;",
									"    pm.expect(summary.totalEmission).to.be.a('number');",
									"    pm.expect(summary.dailyAverage).to.be.a('number');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
