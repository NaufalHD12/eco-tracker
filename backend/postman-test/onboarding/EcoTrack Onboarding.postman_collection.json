			"item": [
				{
					"name": "Get Onboarding Status - Success",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has success message\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('message');",
									"    pm.expect(jsonData.message).to.eql('Onboarding status retrieved successfully');",
									"});",
									"",
									"pm.test(\"Response has onboarding data\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('onboarding');",
									"    pm.expect(jsonData.onboarding).to.have.property('completed');",
									"    pm.expect(jsonData.onboarding).to.have.property('completedSteps');",
									"    pm.expect(jsonData.onboarding).to.have.property('remainingSteps');",
									"    pm.expect(jsonData.onboarding).to.have.property('totalSteps');",
									"    pm.expect(jsonData.onboarding.totalSteps).to.eql(4);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": "{{base_url}}/onboarding/status"
					},
					"response": []
				},
